        body {
            height: 100vh;
            margin: 0;
        }
    
        .Etuylä {
            background-color: #DFEDF2;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 35%;
            border-bottom: 1px solid;
            gap: 10px;
        }
    
        .title {
            text-align: center;
        }
    
        .reseptit {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            height: auto;
        }
    
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 50px;
            width: 100%;
        }
    
        header {
            border-bottom: solid black 1px;
            background-color: #0D1E40;
    
        }
    
        .nav-start {
            justify-content: flex-start;
            display: flex;
        }
    
        .nav-end {
            justify-content: flex-end;
            display: flex;
        }
    
        nav ul {
            gap: 10px;
            font-size: 3vh;
        }
    
        nav a {
            padding: 10px;
            color: white;
        }
    
        .checknappi {
            font-size: 30px;
            display: none;
            margin-bottom: 10px;
        }
    
        #check {
            display: none;
        }
    
        figure {
            border: solid 1px black;
            width: 15%;
            font-size: 15px;
            padding-bottom: 15px;
            margin: 7%;
            background-color: #DFEDF2;
        }
    
        figure button {
            background-color: #0D1E40;
            color: white;
        }
    
        #addrecipesButton {
            background: #0D1E40;
            color: white;
        }
    
        #filter {
            background: #0D1E40;
            color: white;
        }
    
        .recipebutton {
            text-align: center;
        }
    
        .Haeresepti {
            width: 200px;
            max-width: 100%;
        }
    
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 100px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
        }
    
        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 60%;
            text-align: center;
        }
    
        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }
    
        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    
